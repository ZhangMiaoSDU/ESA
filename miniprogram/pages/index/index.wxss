/**index.wxss**/
@import "../../style/zui.wxss";
@import "../../style/zui-theme.wxss";
page {
  background: #f6f6f6;
  /* color: rgba(187, 255, 13, .3); */
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  height: 100%;
  background: rgba(255,177,146, .4);
}

.index.container {
  /* height: 100%; */
  background: rgba(246, 246, 246, .96);
  margin: 20rpx 10rpx;
  padding: 20rpx;
  border-radius: 20rpx;
}

.core-data {
  margin: 20rpx 0;
  border-radius: 10rpx;
  text-align: center
}

ec-canvas {
  width: 100%;
  height: 100%;
}

.chart {
  position: relative; 
  height: 300px; 
  padding: 0px; 
  margin: 0px; 
  border-width: 0px; 
  cursor: default;
}

.chart-container {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 

.title {
  margin: 20rpx 0;
  font-size: 40rpx;
  color: #2c2c2c;
  display: flex;
  justify-content: space-between;
}



.update-time {
  color: rgb(164, 164, 164);
  font-size: 24rpx;
  display: flex;
  align-items: flex-end;
}

.index-btn-view {
  flex: 1;
  width: 100%;
  padding: 0;
  line-height: 104rpx;
  font-size: 34rpx;
  color: rgb(15, 177, 72);
  border: 1px solid rgba(219, 244, 224);
  text-align: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: rgba(219, 244, 224)
}


