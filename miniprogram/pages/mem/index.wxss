/* pages/mem/index.wxss */
.header, .item {
  display: flex;
  height: 100rpx;
  padding: 10rpx 20rpx;
  align-items: center;
}

.header .image, .item .image {
  display: flex;
  align-items: center;
  height: 60rpx;
  width: 60rpx;
  padding: 10rpx;
  background: rgba(47, 127, 240, .1);
  justify-content: center;
  border-radius: 10rpx;
  margin-right: 30rpx;
}


.create.text {
  color: rgba(47, 127, 240, .8);
  flex: 1;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #f1f1f1;
}

.copytext {
  background: rgba(47, 127, 240, .8);
  color: #fff;
  padding: 5rpx 10rpx;
  margin-left: 10rpx;
  border-radius: 10rpx;
}

.item-wrapper {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-bottom: 1rpx solid #f1f1f1;
  height: 100%;
  padding-bottom: 10rpx;
  flex: 1;
  width: 1px
}

.left-detail {
  float: left
}

.right-detail {
  float: right;
  display: flex
}

.right-detail .right-item {
  display: flex;
  align-items: center;
  margin-left: 10rpx;
}

.right-item image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.share-btn {
  /* height: ; */
  background: initial;
  padding: 0;
  float: right;
  text-align: right;
  width: 80rpx;
}
