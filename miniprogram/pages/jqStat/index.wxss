/* pages/jqStat/index.wxss */
.detail {
  background: #f7f7f7;
}

.item {
  background: #fff;
}

.item-header {
  background: #fff;
  box-shadow: 0 6rpx 4rpx 0 #f1f1f1;
  display: flex;
  padding: 20rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.tabs .tabs-item {
  border-radius: 0;
}

.item-body {
  animation: animation .3s
}

.item-body-item {
  margin: 0px 40rpx;
  border-bottom: 1px dashed #ddd;
  padding: 20rpx 0;
  color: rgba(0,0,0,.7);
}

@keyframes animation {
  0% {
    opacity: 0.6;
    transform: translateY(-100rpx)
  }
  100% {
    opacity: 1;
    transform: translateY(0)
  }
}

.stat .item{
  background: #fff;
  border-bottom: 1rpx dashed #ddd;
  margin: 0 20rpx;
  padding: 20rpx 0;
}
