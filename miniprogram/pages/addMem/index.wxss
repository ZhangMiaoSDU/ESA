/* pages/addMem/index.wxss */
@import "../addrlist/index.wxss";
.item-label.item-joined {
  color: #333
}

.search-box {
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  border: 1rpx solid #ddd;
  padding: 0rpx;
  border-radius: 40rpx;
  padding-left: 10rpx;
  margin: 30rpx;
  margin-bottom: 0rpx;
  background: #f0f0f0;
  font-size: 28rpx;
}

.search-box image {
  width: 30rpx;
  height: 30rpx;
  margin: 0 10rpx;
}

.input-box {
  display: flex;
  line-height: 60rpx;
  align-items: center;
  flex: 8;
  justify-content: center;
  color: #898989;
}

.searching .input-box {
  justify-content: space-between;
}

.cancelSearch {
  flex: 1;
  color: rgba(47, 127, 240);
}

.confirmbtn {
  position: fixed;
  width: 100%;
  text-align: center;
  padding: 10rpx 0;
  bottom: 0;
  height: 50rpx;
  line-height: 50rpx;
  background: rgba(47, 127, 240, .8);
  color: #fff;
  font-size: 28rpx;
}

