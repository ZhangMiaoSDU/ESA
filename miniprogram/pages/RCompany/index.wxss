/* pages/RCompany/index.wxss */
page {
  background: #efefef;

}
.base_registerWrap {
  width: 95%;
  box-shadow: 0 2rpx 6rpx 0 hsla(0, 0%,76.9%,.5);
  background: #fff;
  margin: 32rpx auto;
  padding: 0 0 50rpx;
  margin-top: 60rpx;
}

.base-title {
  font-size: 50rpx;
  color: #333;
  letter-spacing: 0;
  text-align: center;
  padding-top: 55rpx;
  font-weight: 900;
  line-height: 40rpx;
  margin-bottom: 56rpx;
}

.ant-form {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
  color: rgba(0,0,0,.65);
  font-size: 30rpx;
  font-variant: tabular-nums;
  line-height: 1.5;
  list-style: none;
  font-feature-settings: 'tunm';

}

.ant-form-item {
  margin-bottom: 24rpx;
  vertical-align: top
}

.ant-row {
  position: relative;
  height: auto
}

.ant-form-item-label {
  width: 30%;
  display: inline-block;
  overflow: hidden;
  line-height: 40rpx;
  white-space: nowrap;
  text-align: right;
  vertical-align: middle;
}

.ant-form-item-wrapper {
  flex: 1;
  height: 100%;
  display: flex;
  align-items: center
}

.ant-form .item {
  height: 60rpx;
  font-size: 30rpx;
  font-weight: 300;
  line-height: 60rpx;
  display: flex;
  align-items: center;
  border-bottom: 1rpx solid #efefef;
  width: calc(90%);
  margin: 0 auto 40rpx auto;
  padding-bottom: 40rpx;
}

.ant-input-wrapper {
  position: absolute;
  right: calc(10%);
  width: calc(50%);
  text-align: right;
}

.pos {
  position: relative;
  
}

.pos .picker {
  position: absolute;
  right: calc(5%);
}

.pos .picker .picker-view {
  display: flex;
  justify-content: space-between;
  height: 60rpx;
  /* padding: 20rpx;  */
  align-items: center
}

.pos .picker .img {
  width: 30rpx;
  height: 30rpx
}

.item button {
  margin: 0 auto;
  width: calc(95%)!important;
  background: #1296db;
  color: #fff;
  font-weight: 400;
}


